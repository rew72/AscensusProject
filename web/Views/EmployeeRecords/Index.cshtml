@model web.ViewModels.RecordViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.employees)
    {
<tr>
    <td>
        @item.firstName
    </td>
    <td>
        @item.lastName
    </td>
    <td>
        @item.email
    </td>
    <td>
        @Html.ActionLink("View", "employeeView", new { id = item.email, first = item.firstName, last = item.lastName })
        @Html.ActionLink("Salary", "SalaryView", new { id = item.email, first = item.firstName, last = item.lastName })
        @Html.ActionLink("Edit", "Edit", new { id = item.email, first = item.firstName, last = item.lastName })
        @Html.ActionLink("Delete", "Delete", new { id = item.email })
    </td>
</tr>
    }

</table>