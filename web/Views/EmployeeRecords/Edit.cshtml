@using RestSharp
@model web.Models.EmployeeModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Employee</h2>

<h4>EmployeeModel</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="firstName" class="control-label"></label>
                <input asp-for="firstName" class="form-control" />
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label"></label>
                <input asp-for="lastName" class="form-control" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" readonly="@(true)" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div id="salary" style="display: none;" class="form-group">
                <label asp-for="salary" class="control-label"></label>
                <input asp-for="salary" id="salaryValue" class="form-control" />
                <span asp-validation-for="salary" class="text-danger"></span>
            </div>
            <div id="hourly" style="display: none;" class="form-group">
                <label asp-for="hourly" class="control-label"></label>
                <input asp-for="hourly" id="hourlyValue" class="form-control" />
                <span asp-validation-for="hourly" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    if (document.getElementById("salaryValue").value > 0) {
            document.getElementById('salary').style.display = "block";
    }
    else if (document.getElementById("hourlyValue").value > 0) {
        document.getElementById('hourly').style.display = "block";
    } else {
        
    }
</script>